<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Product</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">

  <style>
    .card {
  box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
  transition: 0.3s;
  width: 40%;
  padding: 20px ;
  margin: 20px;
  }

  .card:hover {
    box-shadow: 0 8px 16px 0 rgba(0,0,0,0.2);
  }

  .container {
    padding: 2px 16px;
  }
  .cardContainer {
    display: flex;
    flex-wrap: wrap;
    margin: 20px;
    justify-content: center;
  }
  .title {
    text-align: center;
  }
  </style>
  
</head>
<body>
<%- include('partials/navbar',{role:role}) %>

  <h1 class="title">TRANSACTIONNNNNN DETAIL </h1>

  <div class="">
    <table>
      <thead>
        <tr>
          <th>NO</th>
          <th>Image</th>
          <th>Name</th>
          <th>Description</th>
          <th>Price</th>
          <th>Quantity</th>
          <th>sub Total</th>
        </tr>
      </thead>
      <tbody>
        <% data.Orders.forEach((el,index) => { %>
          <tr>
            <td><%= index+1 %></td>
            <td><img src="<%= el.itemImageUrl%>"  height="300px" width="300px"></td>
            <td><%= el.itemName%></td>
            <td><%= el.itemDescription%></td>
            <td><%= el.itemPrice%></td>
            <td><%=el.quantity %></td>
            <td><%= el.subTotal%></td>
          </tr>
        <% }) %>
      </tbody>
    </table>

    <% data.Orders.forEach((el,index) => { %>
    <div class="card mb-3" style="max-width: 540px;">
      <div class="row g-0">
        <div class="col-md-4">
          <img src="<%=el.itemImageUrl %>" class="img-fluid rounded-start" alt="...">
        </div>
        <div class="col-md-8">
          <div class="card-body">
            <h5 class="card-title"><%= el.itemName%></h5>
            <p class="card-text"><%= el.itemDescription%></p>
            <p class="card-text"><%= el.quantity%></p>
            <p class="card-text"><small class="text-muted"><%= el.itemPRice%></small></p>
            <p class="card-text"><%= el.subTotal%></p>
          </div>
        </div>
      </div>
  </div>

    <% }) %>
  </div>
  <%- include('partials/script') %>
  
</body>
</html>